---
export interface Props{
    even_odd: string;
    title:string;
    body:string;
    animation_url?:string;
    animation_alt?:string;
}
const {even_odd,title,body,animation_url,animation_alt} = Astro.props;
const image_url="https://assets.nflxext.com/ffe/siteui/acquisition/ourStory/fuji/desktop/tv.png";
---

<div class="container">
    <div class={even_odd}>
        <h2>{title}</h2>
        <main>{body}</main>
    </div>
    <div class="image_container">
        <img src={image_url} alt={animation_alt}>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Dosis&display=swap');
    .container{
        display: flex;
        justify-content: space-between;
        background-color: black;
        color: white;
        font-family: 'Dosis', sans-serif;
        border-top: 2px solid grey;
        border-bottom: 2px solid grey;
        margin: auto 0;
        min-height: 70vh;
    }
    .image_container{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .image_container img{
        width: 50%;
        flex-basis: 50%;
    }
    .odd,.even{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        flex-basis: 50%;
    }
    .odd h2,.even h2{
        font-size: 35px;
        margin-bottom: 10px;
    }
    .odd main,.even main{
        width: 70%;
        font-size: 25px;
    }
    .even{
        order: 0;
    }
    .odd{
        order: 1;
    }
    @media only screen and (max-width:700px){
        .container{
            flex-direction: column;
            min-height: 90vh;
        }
        .image_container img{
            width: auto;
            height: auto;
        }
        .odd{
            order: 0;
        }
        .even{
            order: 0;
        }
    }
</style>